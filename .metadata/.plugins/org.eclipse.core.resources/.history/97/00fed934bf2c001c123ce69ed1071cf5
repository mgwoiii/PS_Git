package com.pmg.pnn;

import static org.junit.Assert.assertEquals;

import java.sql.SQLException;

import javax.inject.Inject;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

import com.pmg.dao.UserDAO;
import com.pmg.domain.UserVO;
import com.pmg.service.UserService;

@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations = "/root-context.xml")
public class UserMapperTest {
	
	UserService service;
	
	@Test
	public void create() throws SQLException{

		UserVO user = new UserVO();
		
		user.setGrade_id(2);
		user.setUserId("1234@naver.com");
		user.setUserPassword("2311");
		user.setUserName("박박박");
		user.setUserPhonNumber("01012341234");
		user.setUserBirthday("19930101");
		
		assertEquals(2, user.getGrade_id());
		assertEquals("1234@naver.com", user.getUserId());
		assertEquals("2311", user.getUserPassword());
		assertEquals("박박박", user.getUserName());
		assertEquals("01012341234", user.getUserPhonNumber());
		assertEquals("19930101", user.getUserBirthday());
		
//		System.out.println(user.getId());
