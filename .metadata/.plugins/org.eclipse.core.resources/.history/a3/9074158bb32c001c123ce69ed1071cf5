<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 
<mapper namespace="com.pmg.mapper.UserMapper">
 
 
    <!-- 게시판 추가하기 -->
    <insert id="insertUser">
 		INSERT INTO users 
     ( username, password, firstName, lastName, age, salary)
      VALUES(#{username}, #{password}, #{firstName}, #{lastName}, #{age}, #{salary}) 
    </insert>
    
    <!-- 게시판 리스트보기 -->
    <select id="listUser" resultType="com.pmg.domain.UserVO">
    <![CDATA[
    
        select * from users 
        order by id DESC
    ]]>
    </select>
    
    <!-- 게시판 상세보기 -->
    <select id="detailUser" resultType="com.pmg.domain.UserVO">
            select * from users where id = #{id}
    </select>
 
    <!-- 게시판 삭제하기 -->
    <delete id="deleteUser">
        delete from users where id = #{id}
    </delete>
    
    <!-- 게시판 수정하기 -->
    <update id="updateUser">
    
        update users SET firstName = #{firstName}, lastName = #{lastName}, age = #{age}, salary = #{salary} 
         WHERE id = #{id}
    </update>
    <!-- 로그인 아이디 조회 -->
    <select id="loginUser" resultType="com.pmg.domain.UserVO">
            select * 
            from users 
            where username = #{username} and password = #{password}
    </select>
 
</mapper>
